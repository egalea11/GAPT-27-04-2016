@using GAPT.Models
@model AverageRatingModel

@if (Model.AverageRating == 6)
{
    <p class="author-category">
        <h5>This tour is not rated yet.</h5>
    </p>
}
else
{
    <p class="author-category">
        @for (int i = 0; i < Model.AverageRating; i++)
        {
            <i class="fa fa-star"></i>
        }
        @for (int k = 0; k < 5 - Model.AverageRating; k++)
        {
            <i class="fa fa-star-o"></i>
        }
    </p>
}
