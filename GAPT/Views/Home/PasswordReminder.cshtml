
@{
    ViewBag.Title = "Tours-Maltin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="content" class="clearfix">

    <div class="container">

        <div class="row">

            <!-- *** LEFT COLUMN ***
            _________________________________________________________ -->

            
            
                <br><br><br>
                <div class="box" style="padding-right:20px;padding-left:20px;margin-bottom:60px;">

                    <div class="heading" style="margin-bottom:30px;">
                        <h3 class="text-uppercase">Forgot Password</h3>
                        <p class="text-muted">Please enter your email address below and we will send you a link to change your password.</p>
                    </div>

                    
                        <div class="row" style="margin-bottom:20px;">
                            <div class="col-sm-offset-3">
                                <div class="form-group" style="padding-left:20px;">
                                    <label class="col-sm-3 control-label" for="email" style="padding-top:7px;padding-left:0px;width:120px;">Email address</label>
                                    <input  class="form-control" type="email" id="emailinput"/>
                                </div>
                            </div>
                        </div>
                        <!-- /.row -->
                        <div>
                            <div class="text-left" style="display:inline">
                                <form action="@Url.Action("Register","Account")" style="display:inline">
                                    <button type="submit" class="btn btn-template-main">Cancel</button>
                                </form>
                            </div>
                            <div class="text-right" style="display:inline">
                                <form action="@Url.Action("ForgotPasswordConfirmation", "Account")" style="display:inline">
                                    <button type="submit" class="btn btn-template-main" style="float:right;"><i class="fa fa-envelope-o"></i> E-mail new password</button>
                               </form>
                            </div>
                        </div>

                </div>
                <!-- /.box -->
                
            </div>
        </div>
    </div>

