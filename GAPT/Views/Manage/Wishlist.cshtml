    <div class="container">

        <div class="row">

            <!-- *** LEFT COLUMN ***
            _________________________________________________________ -->

            <div class="col-md-9 clearfix" style="margin-bottom: 27px;">
                <div class="row ">
                      <!--Place in for each to show an entry for each item in database-->
                      @{Html.RenderAction("MyWishlist");}
                </div>
                <!-- /.products -->

            </div>
            <!-- /.col-md-9 -->
            <!-- *** LEFT COLUMN END *** -->
            <!-- *** RIGHT COLUMN ***
                         _________________________________________________________ -->

            <div class="col-md-3">
