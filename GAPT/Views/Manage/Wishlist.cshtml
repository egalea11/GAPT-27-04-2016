@{
    ViewBag.Title = "Tours-Maltin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="heading-breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 style="padding-top:20px;">My wishlist</h1>
            </div>
            <div class="col-md-5">
                <ul class="breadcrumb">

                    <li>
                        <a href="@Url.Action("Index","Home")">Home</a>
                    </li>
                    <li>My wishlist</li>
                </ul>
            </div>
        </div>
    </div>
</div>

