@model GAPT.Models.IndexViewModel

@{
    ViewBag.Title = "Tours-Maltin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="heading-breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 style="padding-top:20px;">My account</h1>
            </div>
            <div class="col-md-5">
                <ul class="breadcrumb">

                    <li>
                        <a href="http://localhost:7587/Home/Index">Home</a>
                    </li>
                    <li>My account</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div id="content" class="clearfix">

    <div class="container">

        <div class="row">

            <!-- *** LEFT COLUMN ***
            _________________________________________________________ -->

            <div class="col-md-9 clearfix" id="customer-account">

                <p class="lead" style="margin-bottom:20px;">Change your password or your personal details here.</p>
                <a class="text-left" href="#" data-toggle="modal" data-target="#delete-account-modal" style="font-size:16px;"><p>Deactivate account.</p></a>
                <div class="box">

                    <div class="heading">
                        <h3 class="text-uppercase">Change password</h3>
                    </div>

                    @{Html.RenderPartial("ChangePassword", new ViewDataDictionary(ViewData["WrongPassword"]));}

                </div>
                <!-- /.box -->


                <div class="box clearfix">
                    <div class="heading">
                        <h3 class="text-uppercase">Personal details</h3>
                    </div>

                    @{Html.RenderAction("ChangePersonalDetails");}

                </div>

            </div>
            <!-- /.col-md-9 -->
            <!-- *** LEFT COLUMN END *** -->
            <!-- *** RIGHT COLUMN ***
            _________________________________________________________ -->

            <div class="col-md-3">
                <!-- *** CUSTOMER MENU ***
                _________________________________________________________ -->
                <div class="panel panel-default sidebar-menu">

                    <div class="panel-heading">
                        <h3 class="panel-title">Customer section</h3>
                    </div>

                    <div class="panel-body">

                        <ul class="nav nav-pills nav-stacked">
                            <li>
                                <a href="@Url.Action("UserPortal", "Manage")"><i class="fa fa-list"></i> My orders</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Wishlist", "Manage")"><i class="fa fa-heart"></i> My wishlist</a>
                            </li>
                            <li class="active">
                                <a href="@Url.Action("MyAccount", "Manage")"><i class="fa fa-user"></i> My account</a>
                            </li>
                            <li>
                                @{Html.RenderAction("Index", "Manage");}
                            </li>
                        </ul>
                    </div>

                </div>
                <!-- /.col-md-3 -->
                <!-- *** CUSTOMER MENU END *** -->
            </div>

            <!-- *** RIGHT COLUMN END *** -->

        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->
</div>
<!-- /#content -->

