@model GAPT.Models.SendCodeViewModel
@{
    ViewBag.Title = "Send verification code";
}

<div class="box info-bar" style="margin-top:0.5%;">
    <div style="text-align:center;">
        <div class="heading">
            <h3 class="text-uppercase">@ViewBag.Title</h3>
        </div>

        @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("rememberMe", @Model.RememberMe)

            <hr />

            <div class="panel-heading">
                <h3 class="panel-title">Select Two-Factor Authentication Provider:</h3>
            </div>

                        @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers, new { @class = "form-control", style = "display:inline;" })
                        <input type="submit" class="btn btn-template-main" value="Submit"/>

        }


            </div>
   </div>

    @section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    }
  
    
