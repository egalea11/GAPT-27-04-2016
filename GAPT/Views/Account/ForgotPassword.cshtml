@model GAPT.Models.ForgotPasswordViewModel
@{
    //ViewBag.Title = "Forgot your password?";
    ViewBag.Title = "Tours-Maltin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content" class="clearfix">

    <div class="container">

        <div class="row">

            <!-- *** LEFT COLUMN ***
            _________________________________________________________ -->



            <br><br><br>
            <div class="box" style="padding-right:20px;padding-left:20px;margin-bottom:60px;">

                <div class="heading" style="margin-bottom:30px;">
                    <h3 class="text-uppercase">Forgot Password</h3>
                    <p class="text-muted">Please enter your email address below and we will send you a link to change your password.</p>
                </div>

                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form"}))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="row" style="margin-bottom:20px;">
                        <div class="col-sm-offset-3">
                            <div class="form-group" style="padding-left:20px;">
                                <label class="col-sm-3 control-label" for="email" style="padding-top:7px;padding-left:0px;width:120px;">Email address</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <!-- /.row -->
                    <div>
                        <div class="text-left" style="display:inline">
                            <button type="submit" value="CancelForgotPassword" name="action" class="btn btn-template-main">Cancel</button>
                            <button type="submit" value="ForgotPassword" name="action" class="btn btn-template-main" style="float:right;"><i class="fa fa-envelope-o"></i> E-mail new password</button>
                            @*<form style="display:inline">
                                <button type="submit" value="CancelForgotPassword" name="action" class="btn btn-template-main">Cancel</button>
                            </form>*@
                        </div>
                        @*<div class="text-right" style="display:inline">
                            <form style="display:inline">
                                <button type="submit" value="ForgotPassword" name="action" class="btn btn-template-main" style="float:right;"><i class="fa fa-envelope-o"></i> E-mail new password</button>
                            </form>
                        </div>*@
                    </div>
                    @*<div>
                        <div class="text-left" style="display:inline">
                            <form action="@Url.Action("Index","Home")" style="display:inline">
                                <button type="submit" name="Index" value="Index" class="btn btn-template-main">Cancel</button>
                            </form>
                        </div>
                        <div class="text-right" style="display:inline">
                            <form action="@Url.Action("ForgotPasswordConfirmation", "Account")" style="display:inline">
                                <button type="submit" class="btn btn-template-main" style="float:right;" name="ForgotPassword" value="ForgotPassword"><i class="fa fa-envelope-o"></i> E-mail new password</button>
                            </form>
                        </div>
                    </div>*@
                }

            </div>
            <!-- /.box -->

        </div>
    </div>
</div>

